{% extends 'base.html.twig' %}

{% block title %}Hello CrudController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for message in app.flashes('success') %}
        <div class="flash-notice">
        {# for using need to update version of node 12 #}
            {{ message }} <img src="{{ asset('image/cancel.png') }}" alt="cancel"/ style= "height:18px">
        </div>
    {% endfor %}
    <form action="{{ path('store') }}" method="POST">
     <div class="form-group">
        <label for="fname">First name:</label>
        <input type="text" class="form-control" placeholder="Enter fname" id="fname" name="fname">
      </div>
       <div class="form-group">
        <label for="lname">Last name:</label>
        <input type="text" class="form-control" placeholder="Enter lname" id="lname" name="lname">
      </div>
      <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" placeholder="Enter email" id="email" name="email">
      </div>
      <div class="form-group">
        <label for="pwd">Phonenumber:</label>
        <input type="text" class="form-control" placeholder="Enter number" id="number" max="10" name="number">
      </div>
      <div class="form-group">
       <label for="sel1">Conunty:</label>
          <select class="form-control" id="country" name="country">
            <option>Select Country</option>
            <option value = '1'>India</option>
            <option value = '2'>Australlia</option>
            <option value = '3'>Japan</option>
          </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{% endblock %}
